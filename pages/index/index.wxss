/* 商品列表区 */
.CatalogueWrap{
  margin-top: 84rpx;
}
/* 商品列表名称分类 */

.ShopTitleWrap{
  position: relative;
}

.More{
  position: absolute;
  width:37rpx;
  height:11rpx;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
  right: 42rpx;bottom: 9rpx;
}

.More view{
  width: 9rpx;
  height: 10rpx;
  background: #000;
  border-radius: 50%;
}

.ShopTitle{
  width: 226rpx;
  hieght: 30rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(48,48,48,1);
  line-height: 30rpx;
}

.ShopTitle::before{
  content: '';
  position: absolute;
  width:52rpx;
  border:2rpx solid rgba(14,5,9,1);
  left: 0rpx; top: 14rpx;
}

.ShopTitle::after{
  content: '';
  position: absolute;
  width:52rpx;
  border:2rpx solid rgba(14,5,9,1);
  right: 0rpx; top: 14rpx;
}

/* 商品列表主体样式区 */
.CartalogueMain{
  margin-top: 56rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 15rpx;
  box-sizing: border-box;
}