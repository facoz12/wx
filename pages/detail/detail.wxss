/* pages/template/detail/detail.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 商品轮播图 */

.deailImagesWrap{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.detailImages{
  width: 548rpx;
  height: 744rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/* 商品详情信息 */

.detail {
  display: flex;
  flex-direction: column;
  margin: 50rpx 40rpx 0 41rpx;
}

.detail .title {
  width:669rpx;
  height:74rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(37,37,37,1);
  line-height:46rpx;
}

.detail-price-num {
  width: 675rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 38rpx 32rpx 55rpx 43rpx;
}

.detail-price {
  width:140rpx;
  height:28rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,170,86,1);
  line-height:46rpx;
}

.detail-num {
  width:100rpx;
  height:20rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(91,90,90,1);
  line-height:46rpx;
}

.bgc{
  width: 100%;
  height: 111rpx;
  background: rgba(102, 102, 102, 0.075); 
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
}

/*  规格选择 */

.Specification{
  width: 100%;
  height: 81rpx;
  background: #fff;
  position: relative;
  line-height: 81rpx;
}

.Specification>text:nth-of-type(1){
  width:54rpx;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(91,90,90,1);
  margin-left: 42rpx;
}

.Specification>text:nth-of-type(2){
  width:82rpx;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(178,178,178,1);
  margin-left: 44rpx;
}

.Specification>text:nth-of-type(3){
  width:17px;
  height:30px;
  font-family: '黑体';
  margin-left: 479rpx;
}

/* 商品详细信息/评价 */
 
 /* 刊期详情 */

.detailTabCtrl{
  width: 100%;
  height: 95rpx;
  /* background: skyblue; */
  display: flex;
  text-align: center;
  line-height: 95rpx;
  border-bottom: 1px solid rgba(191,191,191,.2);
}

.fixed{
    position: fixed;
    top: 0;
    background: #fff;
    z-index: 333;
}

.detailTabCtrl>view{
  width: 50%;
  height: 100%;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(95,95,95,1);
}

.detHidd{
  display: none;
}

.detShow{
  display: block;
}

.detailNomal{
  width: 50%;
  height: 100%;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(95,95,95,1);
}

.detailTabCtrl>.detailTabClick{
  width: 50%;
  height: 100%;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,170,86,1);
  position: relative;
}

.detailTabClick::after{
  content: '';
  position: absolute;
  width:139rpx;
  border: 4rpx solid rgba(255,170,86,1);
  bottom: 0; left: 115rpx;
  border-radius: 10rpx;
}

.descriptionWrap{
  margin-top: 38rpx;
}

.description{
  width:109rpx;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin: 0 0 25rpx 67rpx;
  position: relative;
}

.description::after{
  content: '';
  position: absolute;
  width:10rpx;
  height:31rpx;
  background:rgba(83,83,83,1);
  left: -26rpx; top: 7rpx;
  border-radius: 10rpx;
}

.descriptionCont{
  width:611rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(67,67,67,1);
  margin: 25rpx 0 41rpx 71rpx;
}

/* 积累评价 */

.rating{
  height: 153rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(191,191,191,.2);
  align-items: center;
}

.rating view{
  width:140rpx;
  height:60rpx;
  border-radius: 30rpx;
  background: #fff2e3;
  color:rgba(255,179,99,1);
  text-align: center;
  line-height: 60rpx;
  font-size:26rpx;
  font-weight:500;
  font-family:PingFang-SC-Medium;
}

.rating view:nth-child(1){
  margin-left: 39rpx;
}

.rating view:nth-child(2){
  margin-left: 21rpx;
}

.rating view:nth-child(3){
  margin-left: 21rpx;
}

.rating view:nth-child(4){
  margin-left: 19rpx;
}

.rating .onrat{
  background: rgba(255,179,99,1);
  color: #fff;
}

/* 无评价显示 该模块 */

.cont-null{
  text-align: center;
}

.cont-null image{
  width: 113rpx;
  height: 137rpx;
  opacity: 0.5;
  margin-top: 84rpx;
  margin-bottom: 30rpx;
}
.cont-null text{
  width:108rpx;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(221,221,221,1);
}

.detailTabCont .eva-null{
  display: none;
}

.detailTabCont .eva-be{
  display: block;
}

 /* 有评价 显示该模块*/

.rating-cont{  
  /* background: skyblue; */
  height: 311rpx;
  display: flex;
  justify-content: center;
  margin-top: 15rpx;
}

.ratingR{
  width: 554rpx;
  margin-left: 20rpx;
  padding-top: 50rpx;
  box-sizing: border-box; 
}

.UserImg{
  margin-top: 55rpx;
  width:84rpx;
  height:84rpx;
  border-radius:50%;
  background: red; 
}

.UserName{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(39,39,39,1);
}

.ratingTime{
  display: block;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(174,174,174,1);
}

.ratStar image{
  width:31rpx;
  height:29rpx;
}

.ratStar image:nth-of-type(n+1){
  margin-left: 15rpx;
}

.ratText{
  width:554rpx;
  height:63rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(39,39,39,1);
}

/* 底部悬浮栏 */

.detail-nav {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  justify-content: space-between
}

.button-car {
  width:210rpx;
  height:98rpx;
  background:rgba(255,190,116,1);
}

.button-car>text{
  width:147rpx;
  height:29rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}

.button-buy {
  width:209rpx;
  height:98rpx;
  background:rgba(250,151,84,1);
}

.detail-nav button {
  height: 100%;
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0;
  line-height: 100rpx;
}
.detail-nav button::after{
  border-radius: 0;
}
.detail-nav image {
  width:34rpx;
  height:38rpx;
}

.detail-nav text{
  width:43rpx;
  height:21rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(138,137,137,1);
}

.detail-nav .navIconWrap{
  width: 331rpx;
  display: flex;
  justify-content: space-around;
}

.navIconWrap image{
  position: relative;
  left: 15rpx;
  top: 15rpx;
}

.navIconWrap view:nth-child(3) image{
  left:  20rpx;
}

.navIconWrap view{
  text-align: center;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(138,137,137,1);
  text-align: bottom;
  position: relative;
}

.navIconWrap text{
  position: relative;
  bottom: -45rpx;
  left: -25rpx;
}
/* 占位 */
.temp {
  height: 200rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}