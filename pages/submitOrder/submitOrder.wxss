/* pages/submitOrder/submitOrder.wxss */
/* 选择地址栏 未选择状态 */
.shippingAddress-unselected{
  height: 151rpx;
  /* background: skyblue; */
  display: flex;
}

.shippingAddress-unselected>image{
  width: 28rpx;
  height: 34rpx;
  margin: 56rpx 16rpx 0 227rpx; 
}

.shippingAddress-unselected>view{
  width: 220rpx;
  height: 74rpx;
  border: 2rpx solid rgba(153,153,153,1);
  border-radius:  8rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153,153,153,1);
  line-height: 74rpx;
  text-align: center;
  margin-top: 38rpx;
}

/* 选择地址栏 选择状态---------隐藏 */
.shippingAddress-selected{
  height: 279rpx;
  /* background: skyblue; */
  padding: 42rpx 28rpx 26rpx 31rpx;
  box-sizing: border-box;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(138,137,137,1);
  position: relative;
}

.sub-hidd{
  display: none;
}

.sub-show{
  display: block;
}

.shippingAddress-selected image{
  width:28rpx;
  height:34rpx;
  margin-right: 13rpx;
}

.site-detail{
  margin-top: 10rpx;
  margin-left: 38rpx; 
  position: relative;
}
.shippingAddress-selected .site-detail .after-arrow{
  position: absolute;
  font-size: 40rpx;
  bottom: 31rpx;
  right: 0;
  font-family: '黑体'；
}
.site-num{
  margin-left: 150rpx;
  position: relative;
}

.botton-layer{
  position: relative;
}

.botton-layer::after{
  content: '';
  position: absolute;
  width:691rpx;
  height:2rpx;
  border-bottom:1px solid rgba(191,191,191,1);
  left: 0;
  bottom: -105rpx;
}

.school-mes{
  position: absolute;
  bottom: 25rpx;
}
.school-mes image{
  position: relative;
  top: 5rpx;
}
/* 分隔层 */

.spacer-layer{
  height: 15rpx;
  background:rgba(249,248,244,1);
}

/* 商品订单列表 */

.shoppingList{
  height: 291rpx;
  display: flex;
  justify-content: center;
  align-self: center;
  padding-top: 28rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(191,191,191,.3);
}

.shoppingList .ShopListImg{
  width: 174rpx;
  height: 236rpx;
} 

.shoppingList .ShopListText{
  width: 473rpx;
  height: 234rpx;
  /* background: skyblue; */
  margin-left: 26rpx;
}

.shop-name{
  width:447rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(41,41,40,1);
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

.send-per,.send-time{
  width:166rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  margin-right: 44rpx;
  position: relative;
}
.send-per::after{
  content: '';
  position: absolute;
  width: 1rpx;
  height: 22rpx;
  background: rgba(14,5,9,.2);
  right: -22rpx; top: 50%;
  margin-top: -11rpx;
}
.send-time{
  margin-left: 21rpx;
}

.buy-time{
  width:437rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 11rpx;
  letter-spacing: -1rpx;
}

.shop-price{
  width:141rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,170,86,1);
  margin-right: 307rpx;
}

.shop-num{
  width:25rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(41,41,41,1);
  position: relative;
  bottom: 5rpx;
}
.shoppingList .pricer-top{
  margin-top: 20rpx;
}

/* 留言板 */

.messageBoard{
  height: 196rpx;
  /* background: skyblue; */
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(41,41,40,1);
  text-indent: 30rpx;
  position: relative;
}
.messageBoard text{
  margin-top: 34rpx;
}
.messageBoard textarea{
  text-indent: 75rpx;
  text-align: left;
}
.messageBoard::before{
  content: '';
  position: absolute;
  width:691rpx;
  height:1rpx;
  background: rgba(191,191,191,.3);
  top: 195rpx;
}


/* 总价总数 */
.all-shop{
  height: 97rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(41,41,40,1);
  line-height: 97rpx;
  padding-left: 352rpx;
  box-sizing: border-box; 
}
.all-shop .all-num{
  margin-right: 31rpx;
}
.all-price{
  font-weight: bold;
}


/* 底部悬浮 */
.fixd-bottom{
  width: 100%;
  height: 99rpx;
  border-top: 1rpx solid rgba(229,229,229,1);
  /* background: skyblue; */
  bottom: 0;
  position: fixed;
  z-index: 1;
  line-height: 99rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(138,137,137,1);
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 277rpx;
  box-sizing: border-box;
}
.fixd-bottom button{
  width:209rpx;
  height: 100%;
  color: white;
  text-align: center;
  text-decoration: none;
  border-radius: 0;
  line-height: 100rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  background:linear-gradient(-41deg,rgba(250,151,84,1),rgba(255,191,117,1));
}
.fixd-bottom text{
  font-size:36rpx;
  font-family:PingFang-SC-Medium;
  font-weight:bold;
  color: rgba(255, 170, 86, 1);
}