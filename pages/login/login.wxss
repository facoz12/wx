/* pages/login/login.wxss */
page{
  width:100%;
  height: 100%;
  justify-content: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.login-container{
  width:680rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 160rpx;
}
.text{
  width: 80%;
  border-bottom: 1px solid rgba(153, 153, 153, 0.2);
  margin-bottom: 160rpx;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.text text{
  display: block;
  font-size: 32rpx;
  color:#ccc;
}
.text .title{
  font-size: 40rpx;
  color:#000;
  font-weight: bolder;
  margin-bottom: 30rpx;
}
button{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color:#fff;
  border-radius: 50rpx;
  border: none;
  background: #5090f2;
  font-size: 36rpx;
  margin-bottom: 100rpx;
}