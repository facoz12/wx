/* pages/template/magazineItem/magazineItem.wxss */

.magazine-item {
  width: 330rpx;
  height: 492rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 2px 7px 35rpx 5px rgba(24, 24, 24, 0.08);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 28rpx 0;
  box-sizing: border-box;
  margin: 15rpx;
}

.magazine-item image {
  width: 215rpx;
  height: 292rpx;
}

.magazine-item .title {
  text-align: justify;
  font-size: 28rpx;
  height: 62rpx;
  line-height: 36rpx;
  font-weight:500;
  margin: 28rpx 0 22rpx;
}

.magazine-item .price-num {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.magazine-item .price {
  font-size: 30rpx;
  font-weight: 700;
}

.magazine-item .num {
  font-size: 22rpx;
  color: #5B5A5A;
}
